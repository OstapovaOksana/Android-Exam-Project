<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="34sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Екзаменаційний проект"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnLab1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="Лабораторна робота 1"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btnLab2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Лабораторна робота 2"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btnLab3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Лабораторна робота 3"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btnLab4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Лабораторна робота 4"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btnLab5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Лабораторна робота 5"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btnLab6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Лабораторна робота 6"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btnAbout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Інформація про автора"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btnHelp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Довідка"
            android:textSize="20sp"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>